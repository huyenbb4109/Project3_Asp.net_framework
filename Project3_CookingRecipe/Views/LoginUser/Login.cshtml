@model Project3_CookingRecipe.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Credit Login / Register Form a Responsive Widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Credit Login / Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/Content/GiaoDienLogin/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Content/GiaoDienLogin/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/GiaoDienLogin/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Oswald:400,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <!-- //web font -->
</head>
<body>
    <h1> Jame Cooking </h1>
    <div class="main-agileits">
        <!--form-stars-here-->
        <div class="form-w3-agile">
            <h2>Login</h2>

            @using (Html.BeginForm("Login", "LoginUser", FormMethod.Post))
            {
                <div class="form-sub-w3">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "text", placeholder = "UserName" })
                    <div class="icon-w3">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </div>
                </div>
                <div class="form-sub-w3">
                    @Html.PasswordFor(m => m.Password, new { @class = "password", placeholder = "Password" })
                    <div class="icon-w3">
                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                    </div>
                </div>
                <p class="p-bottom-w3ls">Are you new to eBanking?<a class="w3_play_icon1" href="#small-dialog1">  Register here</a></p>

                <div class="submit-w3l">
                    <input type="submit" value="Login">
                </div>
            }


        </div>
        <!--//form-ends-here-->
    </div>
    <div id="small-dialog1" class="mfp-hide">
        <div class="contact-form1">
            <div class="contact-w3-agileits">
                <h3>Register Form</h3>
                @using (Html.BeginForm("Register", "LoginUser", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-sub-w3ls">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "text", placeholder = "Fullname" })
                        <div class="icon-agile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        @Html.TextBoxFor(m => m.Email, new { @class = "email", placeholder = "Email" })
                        <div class="icon-agile">
                            <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "text", placeholder = "Phone" })
                        <div class="icon-agile">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        @Html.TextBoxFor(m => m.IdUserGroup, new { @class = "text", placeholder = "IdUserGroup" })
                        <div class="icon-agile">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "text", placeholder = "UserName" })
                        <div class="icon-agile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>

                    <div class="form-sub-w3ls">
                        @Html.PasswordFor(m => m.Password, new { @class = "password", placeholder = "Password" })
                        <div class="icon-agile">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        @Html.PasswordFor(m => m.Password, new { @class = "password", placeholder = "Password" })
                        <div class="icon-agile">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>

                    <div class="login-check">
                        <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><p>I Accept Terms & Conditions</p></label>
                    </div>
                    <div class="submit-w3l">
                        <input type="submit" value="Register">
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- copyright -->
    <div class="copyright w3-agile">
        <p> © 2022 Credit Login / Register Form . All rights reserved | Design by nguyentruonggiang2901@gmail.com</p>
    </div>
    <!-- //copyright -->
    <script type="text/javascript" src="~/Content/GiaoDienLogin/js/jquery-2.1.4.min.js"></script>
    <!-- pop-up-box -->
    <script src="~/Content/GiaoDienLogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <!--//pop-up-box -->
    <script>
        $(document).ready(function () {
            $('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
</body>
</html>